# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=asiaze_news
DB_USER=asiaze_user
DB_PASSWORD=your_secure_password_here

# MongoDB (if using)
MONGODB_URI=mongodb://localhost:27017/asiaze_news

# API Configuration
API_URL=https://asiaze.cloud/api
BASE_URL=https://asiaze.cloud

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here_change_this
JWT_EXPIRE=7d

# File Upload Configuration
UPLOAD_DIR=/var/www/news-main/uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm

# CORS Configuration
CORS_ORIGIN=https://asiaze.cloud,https://www.asiaze.cloud

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@asiaze.cloud

# Social Media API Keys
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Redis (if using for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FILE=/var/www/news-main/logs/app.log

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
